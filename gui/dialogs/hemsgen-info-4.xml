<?xml version="1.0" encoding="UTF-8"?>
<!-- this file requires FlightGear version 2018.2 or newer -->
<PropertyList>
	<name>hemsgen-info-4</name>
	<layout>vbox</layout>
	<width>400</width>
	
	<group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>HEMSGen Info</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule />
	<text>
		<label>You arrived at the response site.</label>
	</text>	
	<text>
		<label>To "treat" the patient, answer the following question.</label>
	</text>	
	<text>
		<label>Afterwards, you can transport the patient to your nearest suitable hospital.</label>
	</text>	
	<button>
		<legend>Ok</legend>
		<binding>
			<command>nasal</command>
			<script>
				hemsgen.createDiagnosis();
			</script>
		</binding>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>
</PropertyList>
